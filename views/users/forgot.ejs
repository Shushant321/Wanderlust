<div class="airbnb-login-bg d-flex align-items-center justify-content-center min-vh-100">
  <div class="airbnb-login-card shadow-sm p-4 p-md-5">
    <h2 class="fw-bold mb-3 text-center">Forgot Password?</h2>
    <form action="/forgot" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label fw-semibold">Enter your email address</label>
        <input type="email" name="email" id="email" class="form-control airbnb-input" required autofocus />
      </div>
      <button class="btn airbnb-login-btn-main w-100" type="submit">Send Reset Link</button>
    </form>
    <div class="text-center mt-3">
      <a href="/login" class="text-danger text-decoration-none fw-semibold ms-1">Back to Login</a>
    </div>
  </div>
</div>
