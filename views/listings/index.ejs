<!-- MOBILE-ONLY SEARCH BAR -->
<div class="airbnb-mobile-searchbar sticky-top">
  <form action="/listings/search" method="GET" class="d-flex align-items-center justify-content-between w-100">
    <input
      type="text"
      name="location"
      class="form-control airbnb-mobile-search-input rounded-pill px-4 py-2 shadow-sm"
      placeholder="Start your search"
      style="max-width: 90vw;"
      autocomplete="off"
    >
    <button type="submit" class="airbnb-search-btn-mob ms-2 d-flex align-items-center justify-content-center rounded-circle">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
</div>



<!-- MOBILE-ONLY LISTING CARDS -->
<div class="container-fluid px-2 airbnb-mobile-cards" style="padding-bottom:70px;">
  <div class="row">
    <% allListings.forEach(listing => { %>
      <div class="col-12 mb-3">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none airbnb-card-link">
          <div class="airbnb-mobile-card rounded-4 shadow-sm bg-white p-0 position-relative">
            <div class="position-relative">
              <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default-listing.jpg' %>"
                   class="w-100 rounded-4" style="height:180px;object-fit:cover;">
              <!-- Wishlist Heart Icon (top-right corner) -->
              <div style="position: absolute; top: 12px; right: 12px; z-index: 2;">
                <form action="/wishlist/<%= listing._id %>?_method=<%= currUser && currUser.wishlist && currUser.wishlist.includes(listing._id) ? 'DELETE' : 'POST' %>" method="POST" class="d-inline">
                  <button type="submit" class="wishlist-btn">
                    <% if (currUser && currUser.wishlist && currUser.wishlist.includes(listing._id)) { %>
                      <i class="fa-solid fa-heart text-danger"></i>
                    <% } else { %>
                      <i class="fa-regular fa-heart"></i>
                    <% } %>
                  </button>
                </form>
              </div>              
            </div>
            <div class="p-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <div>
                  <div class="fw-semibold"><%= listing.title %></div>
                  <div class="text-muted small"><%= listing.location %>, <%= listing.country %></div>
                  <div class="text-muted small"><%= listing.dates || '23–28 May' %></div>
                </div>
                <div class="text-end">
                  <span class="fw-bold">₹<%= listing.price.toLocaleString("en-IN") %></span><br>
                  <span class="rateinphone small"><i class="fa-solid fa-star"></i> <%= listing.avgRating || "3.5" %></span>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
    <% if (allListings.length === 0) { %>
      <!-- ...no results message... -->
    <% } %>
  </div>
</div>


<!-- DESKTOP-ONLY LISTING CARDS -->
<div class="container airbnb-desktop-cards">
  <div class="row">
    <% allListings.forEach(listing => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none airbnb-card-link">
          <div class="airbnb-card h-100 position-relative">
            <div class="airbnb-card-img-wrap position-relative">
              <img
                src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default-listing.jpg' %>"
                class="airbnb-card-img"
                alt="<%= listing.title %>"
                loading="lazy"
              />
              <span class="airbnb-card-badge">
                <i class="fa-solid fa-star"></i>
                <%= listing.avgRating && listing.avgRating > 0 ? listing.avgRating : "3.5" %>
              </span>
              <!-- Wishlist Heart Icon (top-left corner) -->
              <div style="position: absolute; top: 12px; left: 12px; z-index: 2;">
                <form action="/wishlist/<%= listing._id %>?_method=<%= currUser && currUser.wishlist && currUser.wishlist.includes(listing._id) ? 'DELETE' : 'POST' %>" method="POST" class="d-inline">
                  <button type="submit" class="wishlist-btn">
                    <% if (currUser && currUser.wishlist && currUser.wishlist.includes(listing._id)) { %>
                      <i class="fa-solid fa-heart text-danger"></i>
                    <% } else { %>
                      <i class="fa-regular fa-heart"></i>
                    <% } %>
                  </button>
                </form>
              </div>  
            </div>
            <div class="airbnb-card-body">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <h5 class="airbnb-card-title"><%= listing.title %></h5>
                <!-- <span class="airbnb-card-location text-muted small">
                  <i class="fa-solid fa-location-dot"></i>
                  <%= listing.location %>, <%= listing.country %>
                </span> -->
              </div>
              <p class="airbnb-card-price mb-2">
                ₹ <%= listing.price.toLocaleString("en-IN") %> <span class="airbnb-card-night">/ Night</span>
              </p>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm w-100">View</a>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
    <% if (allListings.length === 0) { %>
      <!-- ...no results message... -->
    <% } %>
  </div>
</div>

<!-- style for wishlist button -->
 <style>
  .wishlist-btn {
  background: rgba(255,255,255,0.95);
  border: none;
  outline: none;
  border-radius: 50%;
  width: 38px;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(60,64,67,0.10);
  transition: box-shadow 0.18s, background 0.18s;
  padding: 0;
  position: relative;
}

.wishlist-btn:hover, .wishlist-btn:focus {
  box-shadow: 0 4px 16px rgba(255,90,95,0.13);
  background: #fff;
}

.wishlist-btn i.fa-heart {
  font-size: 1.35rem;
  transition: color 0.18s;
}

.wishlist-btn .fa-heart.text-danger {
  color: #FF5A5F !important;
}

 </style>